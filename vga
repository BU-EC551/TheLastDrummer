module vga(colora,offset, inDisplayArea, CounterX, CounterY, pixel_clk);
input pixel_clk;
input [9:0]offset;
input inDisplayArea;
input [9:0] CounterX;
input [8:0] CounterY;
output reg colora;
reg c;


always @(posedge pixel_clk)
begin
if(CounterX>=(0+offset) && CounterX<=(50+offset))begin
		if(CounterY>=240 && CounterY<=330)
		begin
		c=1;
		end
	end	
else c=0;
end 

always @(posedge pixel_clk)
begin
  colora <= c & inDisplayArea;
  
   
end
endmodule
